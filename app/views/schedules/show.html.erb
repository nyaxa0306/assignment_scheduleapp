<div class="container">
  <p><%= link_to "←一覧に戻る", :schedules %></p>
  <div class="page-title">
    <h3><%= @schedule.title %></h3>
    <%= link_to [:edit_schedule] do %>
      <button>編集</button>
    <% end %>
  </div>

  <div class="detail-coteiner">
    <table class="detailed-list">
      <tr>
        <th>開始日</th>
        <td><%= @schedule.start_date %></td>
      </tr>
      <tr>
        <th>終了日</th>
        <td><%= @schedule.end_date %></td>
      </tr>
      <tr>
        <th>終日</th>
        <td><%= @schedule.all_day %></td>
      </tr>
      <tr>
        <th>スケジュールメモ</th>
        <td><%= @schedule.remark %></td>
      </tr>
    </table>
  </div>
</div>
